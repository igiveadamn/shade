<table>

<% for location in locations %>
	<tr>
		<td class="<%= 'no' if location.availability <= 0 %>space"><%= location.occupancy %>/<%= location.capacity %></td>
		<td>(<%= link_to "Change", new_occupancy_path(:location_id => location.id) %>) :</td>
		<td><%= link_to location.name, location_path(location) %></td>
		<td><%= location.region.name %></td>
		<td><%=h location.location_type.name if location.location_type %></td>		
		<td><%=h location.depot.name if location.depot %></td>		
		<td><%=h location.contact %> (<%=h location.cell %>)</td>		
		<td><%= location.address %></td>
	</tr>
<% end %>
</table>
