<h1>Listing requests</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Intervention</th>
    <th>Comments</th>
    <th>Collection method</th>
    <th>Status</th>
    <th>Created by</th>
  </tr>

<% for request in @requests %>
  <tr>
    <td><%=h request.location_id %></td>
    <td><%=h request.intervention_id %></td>
    <td><%=h request.comments %></td>
    <td><%=h request.collection_method %></td>
    <td><%=h request.status %></td>
    <td><%=h request.created_by %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New request', new_request_path %>
