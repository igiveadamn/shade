<h1>Listing organisations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Contact</th>
    <th>Cell</th>
    <th>Tel</th>
    <th>Email</th>
  </tr>

<% for organisation in @organisations %>
  <tr>
    <td><%=h organisation.name %></td>
    <td><%=h organisation.address %></td>
    <td><%=h organisation.contact %></td>
    <td><%=h organisation.cell %></td>
    <td><%=h organisation.tel %></td>
    <td><%=h organisation.email %></td>
    <td><%= link_to 'Show', organisation %></td>
    <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
    <td><%= link_to 'Destroy', organisation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New organisation', new_organisation_path %>
