<h2>New organisation</h2>

<% form_for(@organisation) do |f| %>
  <%= f.error_messages %>

	<fieldset>
	  <p>
			<%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
			<%= f.label :address %><br />
			<%= f.text_area :address, :cols => 37, :rows => 4 %>
	  </p>
	  <p>
			<%= f.label :contact %><br />
	    <%= f.text_field :contact %>
	  </p>
	  <p>
			<%= f.label :cell %><br />
	    <%= f.text_field :cell %>
	  </p>
	  <p>
			<%= f.label :tel %><br />
	    <%= f.text_field :tel %>
	  </p>
	  <p>
			<%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.submit "Create" %>
	  </p>
	</fieldset>
<% end %>

<%= link_to 'Back', organisations_path %>