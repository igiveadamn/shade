<% form_for :location, @location, :url => { :action => "add" } do |f| %>
	<fieldset>
	  <p>
		<%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
		<%= f.label :address %><br />
		<%= f.text_area :address, :cols => 37, :rows => 4 %>
	  </p>
	  <p>
		<%= f.label :comments %><br />
	    <%= f.text_field :comments %>
	  </p>
	  <p>
		<%= f.label :capacity %><br />
	    <%= f.text_field :capacity %>
	  </p>
	    <%= f.submit "Create" %>
	  </p>
	</fieldset>
<% end %>