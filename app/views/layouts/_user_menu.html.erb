<div id="usermenu">
	<% if logged_in? -%>
		<strong id="current_user"><%=h current_user.login %></strong>
		 | 
		<%= link_to "Locations", locations_path %>
		 | 
		<%= link_to "Requests", requests_path %>
		 | 
		<%= link_to "Depots", depots_path %>
         |
		<%= link_to "My Tasks (#@open_tasks_for_user)", my_tasks_path %>
		 |
		<%= link_to "Sign out", session_path, :method => "delete", :title => "Log off" %>
	<% else -%>
		<%= link_to "Log in", new_session_path, :title => "Sign in" %>
	<% end -%>
</div>


