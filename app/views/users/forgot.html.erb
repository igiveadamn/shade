<h2>I forgot my password</h2>

<div class="instruction">
	Simply enter the email address you used to sign up, and we'll email your username and a password reset link to you.
</div>

<%= error_messages_for :user %>

<% form_for :user, :url => do_forgot_users_path do |f| -%>
	<fieldset class="user_forgot">
		<table>
			<tr>
				<th><label for="email"><span class="nowrap">Email:</span></label></th>
				<td><%= f.text_field :email, :size => 20, :maxlength => 100 %></td>
			</tr>
			<tr>
				<th></th>
				<td><%= submit_tag "Reset my password" %>&nbsp;&nbsp;<%= link_to "Back", new_session_path %></td>
			</tr>
		</table>
	</fieldset>
<% end -%>


