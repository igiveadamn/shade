<h1>Listing interventions</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for intervention in @interventions %>
  <tr>
    <td><%=h intervention.name %></td>
    <td><%= link_to 'Show', admin_intervention_path(intervention) %></td>
    <td><%= link_to 'Edit', edit_admin_intervention_path(intervention) %></td>
    <td><%= link_to 'Destroy', admin_intervention_path(intervention), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New intervention', new_admin_intervention_path %>
