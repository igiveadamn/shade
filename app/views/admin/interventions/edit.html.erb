<h1>Editing intervention</h1>

<% form_for :intervention, :url => admin_intervention_path(@intervention), :html => { :method => :put } do |f| %>
  <%= f.error_messages %>

  <p>
		<%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', admin_intervention_path(@intervention) %> |
