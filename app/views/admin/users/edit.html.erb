<h2>Edit user <%=h @user.login %></h2>

<%= error_messages_for :user %>

<% form_for :user, :url => admin_user_path(@user), :html => { :method => :put }  do |f| -%>

	<fieldset>
		<%= render :partial => "form", :locals => { :f => f } %>
		<p>
			<%= submit_tag "Change user" %>
		</p>
	</fieldset>

<% end -%>