<p>
	<label for="login"><span class="nowrap">Login:</span></label><br/>
	<%= f.text_field :login, :size => 20, :maxlength => 100 %>
</p>
<p>
	<label for="full_name"><span class="nowrap">Full name:</span></label><br/>
	<%= f.text_field :name, :size => 20, :maxlength => 100 %>
</p>
<p>
	<label for="email"><span class="nowrap">Email:</span></label><br/>
	<%= f.text_field :email, :size => 20, :maxlength => 100 %>
</p>
<p>
	<label for="cell"><span class="nowrap">Cell:</span></label><br/>
	<%= f.text_field :cell, :size => 15, :maxlength => 100 %>
</p>
<p>
	<label for="depot"><span class="nowrap">Depot:</span></label><br/>
  <%= f.select :depot_id, Depot.find(:all).collect {|i| [ i.name, i.id ] } %>
</p>
