<h2>Users</h2>

<table>
	<tr>
		<th>Login</th>
		<th>Name</th>
		<th>Email</th>
		<th>Cell</th>
		<th>Depot</th>
	</tr>
	<% @users.each do |user| -%>
		<tr>
			<td><%= link_to user.login, edit_admin_user_path(user) %></td>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= user.cell %></td>
			<td><%= user.depot.name if user.depot %></td>
		</tr>
	<% end -%>
</table>

<div class="actions">
	<%= link_to "Create user", new_admin_user_path %>
</div>