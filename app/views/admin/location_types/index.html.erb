<h1>Listing location_types</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for location_type in @location_types %>
  <tr>
    <td><%=h location_type.name %></td>
    <td><%= link_to 'Show', admin_location_type_path(location_type) %></td>
    <td><%= link_to 'Edit', edit_admin_location_type_path(location_type) %></td>
    <td><%= link_to 'Destroy', admin_location_type_path(location_type), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New location_type', new_admin_location_type_path %>
